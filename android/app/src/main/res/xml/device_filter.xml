<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Standard USB MIDI device filters -->
    <usb-device class="1" subclass="1" protocol="3" /> <!-- USB Audio Control -->
    <usb-device class="1" subclass="3" protocol="0" /> <!-- USB MIDI Streaming -->
    <usb-device class="239" subclass="3" protocol="1" /> <!-- USB MIDI class alternative -->
    
    <!-- Common MIDI device vendor/product ID combinations -->
    <!-- NUX devices -->
    <usb-device vendor-id="7029" /> <!-- NUX vendor ID -->
    
    <!-- Roland devices -->
    <usb-device vendor-id="1177" /> <!-- Roland vendor ID -->
    
    <!-- BOSS devices -->
    <usb-device vendor-id="1177" product-id="86" /> <!-- BOSS GT-1 -->
    
    <!-- Yamaha devices -->
    <usb-device vendor-id="1177" /> <!-- Yamaha vendor ID -->
    
    <!-- Generic audio/MIDI interfaces -->
    <usb-device class="1" /> <!-- USB Audio class -->
    <usb-device class="3" /> <!-- USB HID class (some MIDI controllers) -->
    
    <!-- Fallback for unknown MIDI devices -->
    <usb-device class="255" /> <!-- Vendor-specific class -->
</resources>
